<link rel="stylesheet" href="/assets/edit.css" />
<!-- Hiển thị thông báo lỗi nếu có -->
<% if flash.now[:alert] %>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= flash.now[:alert] %>
  </div>
<% end %>

<div class="login-form">
  <h1>Quên Mật Khẩu</h1>
  <%= form_with(url: password_resets_path, method: :post, html: { id: 'forgot-password-form' }) do %>
    <div class="imgcontainer">
      <span onclick="window.location.href='/dangnhap'" class="close" title="Close Modal">&times;</span>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Gửi Yêu Cầu", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>


   