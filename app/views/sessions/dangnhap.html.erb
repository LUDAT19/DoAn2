<link rel="stylesheet" href="/assets/login.css" />
<!-- Hiển thị thông báo lỗi nếu có -->
<% if flash.now[:danger] %>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= flash.now[:danger] %>
  </div>
<% end %>
<div class="login-form">
  <h1>Đăng Nhập</h1>

  <%= form_with(url: dangnhap_path, local: true, html: { class: "form_dangnhap" }) do |f| %>
    <div class="imgcontainer">
      <span onclick="window.location.href='/'" class="close" title="Close Modal">&times;</span>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email Người Dùng" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Nhập email", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_pidget, "Mật Khẩu" %>
      <%= f.password_field :password_pidget, class: "form-control", placeholder: "Nhập mật khẩu", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Đăng Nhập", class: "dangnhap" %>
      <label class="remember-me">
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>
      <span class="forgot-password">
       Forgot  <a><%= link_to 'password?', new_password_reset_path %></a>
      </span>
    </div>
    <div class="signup-link">
      <p>Chưa có tài khoản? <%= link_to 'Đăng ký', dangky_path %></p>
    </div>


  <% end %>

  <!-- Hiển thị thông báo lỗi nếu có -->
  <%# <div class="alert alert-danger" id="error-message" style="display: none;"></div> %>
</div>

<script>
    var errorMessage = ""; // Bạn có thể thay đổi thành thông báo từ backend nếu cần
    if (errorMessage) {
        var errorDiv = document.getElementById('error-message');
        errorDiv.textContent = errorMessage;
        errorDiv.style.display = 'block'; // Hiển thị thông báo lỗi
    }
</script>
