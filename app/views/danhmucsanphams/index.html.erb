<%= stylesheet_link_tag 'danhmucsanphams', media: 'all' %>
<div class="danhmuc-container">
  <div class="header-container">
    <div class="header-left">
      <%= link_to 'Quay lại', index3_path, class: 'btn btn-secondary' %>
    </div>
    <div class="header-center">
      <h2>Danh Sách Danh Mục</h2>
    </div>
    <div class="header-right">
      <%= link_to 'Thêm Danh Mục Mới', new_danhmucsanpham_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Tên Danh Mục</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% @danhmucs.each do |danhmuc| %>
        <tr>
          <td><%= danhmuc.ten_danhmuc %></td>
          <td class="action-buttons">
            <%= link_to 'Sửa', edit_danhmucsanpham_path(danhmuc), class: 'btn btn-sm btn-warning' %>
            <%= button_to 'Xóa', danhmucsanpham_path(danhmuc), 
                method: :delete,
                form: { data: { turbo_confirm: 'Bạn có chắc chắn muốn xóa danh mục này?' } },
                class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 